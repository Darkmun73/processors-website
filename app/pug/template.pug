include title_names
block variables
doctype html
html
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		title #{title}
		link(rel="stylesheet", href="css/bootstrap-reboot.min.css")
		link(rel="stylesheet", href="css/main.css")
		script(src="js/jquery-3.5.1.min.js")
		script(src="http://d3js.org/d3.v7.min.js")
		script(src="https://unpkg.com/packery@2/dist/packery.pkgd.js")
	body
		include mixins
		.main-block 
			.header
				img.header__logo(src="/img/header-logo.png")
				.header__menu
					+createMenu(title)
			hr
			+createCurrentPath(title)
			block content 
			hr
			.footer
		block scripts 