menu_active_color = #3d5e7f
border_radius = 6px
header_margin = 25px

*
	box-sizing: border-box
body
	width: 100%
	height: 100%
	background-color: #1c3d58;
	//background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
	font-size 16px
	color #fff
	text-align center
	padding 0px
	.main-block
		margin 0 auto
		width 60%
		min-height 700px
		min-width 100px
		display flex
		flex-direction: column
		span.current-page
			color: #5591CC
			font-size: 12px
			line-height: 16px
			margin-bottom: 10px
		hr
			width 100%
			border none
			border-top solid 1px #2f4c67

		.header
			display flex
			img.header__logo
				overflow hidden
				height: 100%
				max-width: 50px
				min-width: 50px
				margin-right: header_margin
			&__menu
				overflow hidden
				height: 100%
				display flex
				justify-content: flex-start
				flex-wrap nowrap
				a.menu__item
					display: block
					white-space: nowrap
					border-radius: 0 0 border_radius border_radius
					padding 5px 10px
					margin-right: header_margin
					text-decoration: none
					color #6e98bc
					&:hover
						background-color #224868
				a.menu__item_active
					color white
					background-color menu_active_color
					&:hover
						background-color menu_active_color

		.footer
			height 10%

@media (max-width:925px)
	body
		.main-block
			.header
				img.header__logo
					overflow hidden
					height: 100%
					max-width: 70px
					min-width: 70px
					margin-right: header_margin
				&__menu
					margin auto
					flex-direction: column
					a.menu__item
						margin: 0
						border-radius: 9px

@media (max-width:680px)
	body
		.main-block
			align-items: stretch
			.header
				flex-direction: column
				img.header__logo
					margin: auto
					max-width: none
					width 40%
				&__menu
					flex-direction: column
					width 100%
					a.menu__item
						text-align: center
						margin: 3px 0
						border-radius: border_radius

@import 'index.styl'
@import 'processors.styl'
@import 'processor-info.styl'
